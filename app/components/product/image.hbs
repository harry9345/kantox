<div class="relative">
  <img
    src={{@src.src}}
    alt={{concat @src.src 'Image'}}
    class="{{if @isOnProduct 'rounded-tl-lg' 'product-image'}}"
  />
  <div class="absolute right-4 top-4">
    <GeneralButton
      @bgColor="bg-teal100"
      @color="text-teal900"
      @fontWeight="font-normal"
    >
      {{@src.discount}}
    </GeneralButton>
  </div>
</div>